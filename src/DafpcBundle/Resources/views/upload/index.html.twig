{% extends '::base.html.twig' %}
{% block title %}Dafp'c | Upload{% endblock %}

{% block body %}
    <h1>Uploads list</h1>

    <table>
        <thead>
        <tr>
            <th>Photos</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('upload_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>

                <td>
                    <ul>
                        <li>
                            <a href="{{ path('upload_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('upload_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('upload_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}

